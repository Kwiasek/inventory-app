extends layout 

block content
    h1= title
    form(method="POST")
        div.form-group
            label(for="name") Category name: 
            input#name.form-control(type="text" name="name" required placeholder="e.g. Helicopters" value=(undefined===category ? '' : category.name))
        div.form-group
            label(for="desc") Category description:
            p <textarea id="desc" class="form-control" name="desc" placeholder="Very cool helicopters">#{(undefined===category ? "" : category.desc)}</textarea>
        button.btn.btn-primary(type="submit") Submit
        if errors 
            hr
            ul 
                each error in errors 
                    li= error.msg